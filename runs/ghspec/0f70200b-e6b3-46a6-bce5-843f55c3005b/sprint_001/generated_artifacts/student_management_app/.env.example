# CONTENT OF FILE student_management_app/.env.example

# Example environment configuration file for the Student Management App

# Database configuration
DATABASE_URL=sqlite:///students.db  # SQLite database for persistent storage

# API configuration
API_HOST=127.0.0.1                  # Host for the API
API_PORT=5000                        # Port for the API
API_DEBUG=True                       # Enable debug mode for development

# JSON Content Type Headers
CONTENT_TYPE=application/json        # Required content type for the API requests

# Environment
ENVIRONMENT=development              # Set the environment (development, testing, production)