# File: .env.example

# Example environment configuration for the Student Management Application

# Database configuration
DATABASE_URL=sqlite:///./test.db

# API configuration
API_VERSION=v1
API_TITLE=Student Management API
API_DESCRIPTION=API for managing students and courses.
API_SERVE_REDOC=True

# Example environment variable for logging (level can be DEBUG, INFO, WARNING, ERROR, or CRITICAL)
LOG_LEVEL=INFO

# Course API Documentation
# 
# Course Retrieval API
# Endpoint: GET /courses/{id}
# 
# Description:
# Retrieve details of a specific course using its unique ID.
#
# Response:
# On success, the API returns a JSON object containing the course information.
# 
# Response Format:
# {
#     "id": "course_id",          # (string) Unique identifier for the course.
#     "name": "course_name",      # (string) Name of the course.
#     "level": "course_level"     # (string) Level of the course (e.g., beginner, intermediate, advanced).
# }
#
# On failure (e.g., course not found), the API returns:
# {
#     "error": {
#         "code": "E404",        # (string) Error code indicating "Not Found".
#         "message": "Course not found.",  # (string) Description of the error.
#         "details": {}            # (object) Additional details (if any).
#     }
# }