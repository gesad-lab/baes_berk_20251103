# File: src/main.py

from fastapi import FastAPI, HTTPException
from pydantic import BaseModel, EmailStr, constr
from typing import List

app = FastAPI()

# Pydantic model for teacher creation
class TeacherCreate(BaseModel):
    name: constr(min_length=1)  # Must be a non-empty string
    email: EmailStr  # Validated as a proper email format

# In-memory storage for teachers (replace with database in production)
teachers = []

@app.post("/teachers", response_model=TeacherCreate, status_code=201)
async def create_teacher(teacher: TeacherCreate):
    """
    Create a new teacher.

    Args:
        teacher (TeacherCreate): The teacher data to create.

    Returns:
        TeacherCreate: The created teacher's data.
    
    Raises:
        HTTPException: If 'name' is missing or 'email' is invalid.
    """
    # Store the teacher in the in-memory list (a placeholder for database storage)
    teachers.append(teacher)
    return teacher

@app.get("/teachers", response_model=List[TeacherCreate])
async def list_teachers():
    """
    Get a list of all teachers.

    Returns:
        List[TeacherCreate]: A list of all created teachers.
    """
    return teachers

