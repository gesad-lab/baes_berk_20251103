# File: /course_management/.env.example

# Environment Configuration Example for Course Management Application

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/course_management"

# Flask Configuration
FLASK_ENV="development"  # Options: development, production
FLASK_DEBUG=true  # Enable/Disable debug mode

# Secret Key for Session Management
SECRET_KEY="your_secret_key_here"  # Change this to a random secret key for production

# API Configuration
API_VERSION="v1"  # API versioning

# Logging Configuration (optional)
LOG_LEVEL="INFO"  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# Other Service Configuration (add as needed)
# EXTERNAL_SERVICE_URL="https://api.example.com"  # Example of an external service configuration