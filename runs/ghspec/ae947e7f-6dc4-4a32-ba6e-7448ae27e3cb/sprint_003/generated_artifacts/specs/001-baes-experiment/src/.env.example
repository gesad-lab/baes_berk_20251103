# .env.example

# Sample environment variable configurations for the application.
# Please copy this file to `.env` and update the values as needed.

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/mydatabase
DATABASE_ECHO=True  # Set to 'True' to log SQL queries for debugging

# API Configuration
API_HOST=0.0.0.0  # The host to run the API on
API_PORT=8000  # The port number to run the API on

# Security Configurations
SECRET_KEY=your_secret_key_here  # Used for signing tokens and encryption
ALGORITHM=HS256  # The algorithm used for encoding JWT tokens
ACCESS_TOKEN_EXPIRE_MINUTES=30  # Token expiration time in minutes

# Email Configuration (if applicable)
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_FROM=noreply@example.com
EMAIL_USERNAME=your_email_username
EMAIL_PASSWORD=your_email_password

# Logging Configuration
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# Other Environment-specific Settings
ENV=development  # Set to 'production' for production environment
DEBUG=True  # Toggle Debug mode on/off

# Ensure all required environment variables are set before running the application!