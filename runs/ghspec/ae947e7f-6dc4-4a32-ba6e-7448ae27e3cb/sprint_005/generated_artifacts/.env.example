# .env.example

# General Application Settings
APP_NAME=MyApplication
APP_VERSION=1.0.0

# Database Configuration
DATABASE_URL=sqlite:///./app.db

# Teacher Configuration
TEACHER_NAME_REQUIRED=true
TEACHER_EMAIL_REQUIRED=true

# Security Settings
SECRET_KEY=your_secret_key_here        # Change this in production
DEBUG_MODE=true                        # Should be false in production

# Logging Configuration
LOG_LEVEL=INFO

# API Configuration
API_PREFIX=/api/v1
TEACHER_API_ENDPOINT=/teachers

# Note: Remember to set your actual secret key and adjust configurations based on your environment.