# .env.example

# Environment variables for the Student Management application

# The path to the SQLite database file
DATABASE_URL=sqlite:///./students.db

# FastAPI settings
FASTAPI_HOST=127.0.0.1
FASTAPI_PORT=8000
FASTAPI_DEBUG=True

# Optional: if using an external service for email notifications, specify here
# EMAIL_HOST=smtp.example.com
