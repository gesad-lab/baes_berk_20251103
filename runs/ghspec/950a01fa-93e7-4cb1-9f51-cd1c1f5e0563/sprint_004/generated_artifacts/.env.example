DATABASE_URL=postgresql://username:password@localhost:5432/mydatabase
# The database URL should be in the format of your database's connection string.
# Replace 'username', 'password', and 'mydatabase' with your actual database credentials

REDIS_URL=redis://localhost:6379/0
# URL for the Redis server if caching or session storage is used.

JWT_SECRET=your_jwt_secret_key
# Secret key for JWT authentication. Replace with a strong secret in production.

DEBUG_MODE=False
# Set to True to enable debug logs. Should be False in production.

ALLOWED_HOSTS=localhost,127.0.0.1
# Comma-separated list of allowed hosts for deployment.

# Uncomment and set to the correct values for production
# LOG_LEVEL=INFO
# Use INFO or ERROR for production logging level.

# Example of configuring any third-party service keys
# SERVICE_API_KEY=your_service_api_key
# Replace with your actual API key for third-party service integrations.