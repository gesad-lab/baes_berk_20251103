# .env.example

# Environment configuration for the application
# Ensure to fill in the required environment variables for the application to function correctly

# Database configuration
DATABASE_URL=sqlite:///./app.db

# Course management configurations
COURSE_NAME_MAX_LENGTH=100  # Maximum length for course names
COURSE_LEVEL_OPTIONS=basic,intermediate,advanced  # Indicates the possible course levels

# API configuration
API_VERSION=v1
API_HOST=localhost
API_PORT=8000

# Cache settings (if applicable)
CACHE_ENABLED=False
CACHE_SIZE=100  # Maximum number of items to cache

# Logging configuration
LOG_LEVEL=INFO  # Set log level for application logs
LOG_FORMAT=json  # Use JSON format for structured logging

# Performance configurations
ENABLE_PAGINATION=True  # Enable pagination for course listings
MAX_COURSES_PER_PAGE=100  # Maximum courses per page for listing

# Authentication settings
JWT_SECRET_KEY=your_secret_key  # Secret key for JWT encoding/decoding
JWT_EXPIRY_MINUTES=60  # Token expiry time in minutes

# Add any new environment variables here for course management or other features as necessary

# Note: Make sure to keep this file updated with all required variables for new functionalities.
# Review the code and ensure values here align with the expected types and constraints in your application.