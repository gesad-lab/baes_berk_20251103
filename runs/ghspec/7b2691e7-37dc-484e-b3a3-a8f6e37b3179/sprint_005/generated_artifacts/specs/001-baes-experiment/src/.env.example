# .env.example

# Environment configuration example for the educational management system

# Flask configuration
FLASK_APP=app.py              # Main application entry point
FLASK_ENV=development         # Set environment to development or production

# Database configuration
DATABASE_URL=sqlite:///app.db # SQLAlchemy database URL (modify as necessary)
DATABASE_TRACK_MODIFICATIONS=False # Disable Flask-SQLAlchemy event system (recommended)

# Secret key for session management and CSRF protection
SECRET_KEY=your_secret_key_here # Change this to a random string for production

# Email configuration
MAIL_SERVER=smtp.example.com   # Mail server to use for sending emails
MAIL_PORT=587                  # Port for the mail server
MAIL_USE_TLS=True              # Enable TLS
MAIL_USERNAME=your_email@example.com # Email username
MAIL_PASSWORD=your_password_here # Email password (ensure not to expose in production)

# Application specific settings
TEACHER_ENTITY_NAME_MAX_LENGTH=100 # Max length for teacher's name
TEACHER_ENTITY_EMAIL_MAX_LENGTH=100 # Max length for teacher's email

# Logging configuration
LOG_LEVEL=INFO                 # Application log level (DEBUG, INFO, WARNING, ERROR)
LOG_FILE_PATH=/var/log/app.log  # Path to log file (ensure this directory exists)

# Additional configurations can be added as necessary