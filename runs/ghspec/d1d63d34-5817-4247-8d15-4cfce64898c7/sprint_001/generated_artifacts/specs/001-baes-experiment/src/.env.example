# .env.example

# The application configuration environment variables

# Database connection settings
DB_HOST=localhost       # Database host
DB_PORT=5432            # Database port
DB_NAME=student_db      # Database name
DB_USER=your_username   # Database user
DB_PASSWORD=your_password # Database password

# API configuration
API_PORT=5000           # Port for the API server
API_VERSION=v1          # Version of the API

# Logging settings
LOG_LEVEL=INFO          # Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL

# Enable or disable debug mode
DEBUG_MODE=False        # True for development, False for production

# Other configuration settings can be added as needed
# ...