# .env.example

# Configuration file for the Student Entity Web Application

# The environment variable for the Flask application's secret key.
# This key is used for session management and should be kept secret.
FLASK_SECRET_KEY='your_secret_key_here'

# The database URL for SQLite. Change this to your desired database file location.
# For example: sqlite:///path/to/your/database.db
DATABASE_URL='sqlite:///students.db'

# The environment in which the application is running.
# Possible values: development, production
FLASK_ENV='development'

# Debug mode for Flask. Should be turned off in production.
FLASK_DEBUG=True

# The host and port for the Flask application to run on.
# Default is 0.0.0.0 for all interfaces and port 5000.
FLASK_HOST='0.0.0.0'
FLASK_PORT='5000'

# Log level for the application. Change to WARNING or ERROR for production.
LOG_LEVEL='DEBUG'